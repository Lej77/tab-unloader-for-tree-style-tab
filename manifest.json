{
  "manifest_version": 2,
  "name": "Tab Unloader for Tree Style Tab",
  "version": "4.0",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "strict_min_version": "58.0"
    }
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "tabHide"
  ],
  "background": {
    "scripts": [
      "common/common.js",
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "resources/permissions.html*"
  ]
}